<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Subjects</title>

    <style>
      ul {
        padding: 0;
      }

      ul li {
        list-style-type: none;
      }
    </style>
  </head>
  <body>
    <table style="width: 100%;">
      <thead>
        <tr>
          <th>Id</th>
          <th>Subject Name</th>
          <th>Teachers</th>
          <th>Students</th>
        </tr>
      </thead>
      <tbody align="center">
        <% rowsSubject.forEach(subject => { %>
          <tr>
            <td><%= subject.id %></td>
            <td><%= subject.subject_name %></td>
            <td>
              <% rowsTeacher.forEach(teacher => { %>
                <% if (subject.id === teacher.SubjectId) { %>
                  <ul>
                    <li><%= teacher.first_name %></li>
                  </ul>
                <% } %>
              <% }) %>
            </td>
            <td>
              <a href="/subjects/<%= subject.id %>/enrolledstudents">Enrolled Students</a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </body>
</html>