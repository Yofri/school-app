<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/meta', {title: title}) %>
  <body>
    <% include ../partials/navigation %>

    <p>First Name: <span><%= rowStudent.first_name %></span></p>
    <p>Last Name: <span><%= rowStudent.last_name %></span></p>
    <p>Email: <span><%= rowStudent.email %></span></p>

    <form method="post">
      <select name="subjectId">
        <% rowSubject.forEach(subject => { %>
          <option value="<%= subject.id %>"><%= subject.subject_name %></option>
        <% }) %>
      </select>
      <button>ADD SUBJECT</button>
    </form>
  </body>
</html>