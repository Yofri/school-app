<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Students</title>
  </head>
  <body>
    <h3>Students Data</h3>
    <a href="/students/add">Add Student</a>

    <table style="width: 100%;">
      <thead>
        <tr>
          <th>Id</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Full Name</th>
          <th>Email</th>
          <th>Options</th>
        </tr>
      </thead>
      <tbody align="center">
        <% rows.forEach(row => { %>
            <tr>
              <td><%= row.id %></td>
              <td><%= row.first_name %></td>
              <td><%= row.last_name %></td>
              <td><%= rows[0].getFullname() %></td>
              <td><%= row.email %></td>
              <td>
                <a href="/students/edit/<%= row.id %>">Edit</a>
                <a href="/students/delete/<%= row.id %>" class="confirmation">Delete</a>
              </td>
            </tr>
        <% }) %>
      </tbody>
    </table>
  </body>

  <script>
    document.querySelector('.confirmation').addEventListener('click', e => {
      const state = confirm('delete this student?');
      if (!state) e.preventDefault();
    });
  </script>
</html>