<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/meta', {title: title}) %>
  <body>
    <% include ../partials/navigation %>

    <h3>Students Data</h3>
    <a href="/students/add">Add Student</a>

    <table style="width: 100%;">
      <thead>
        <tr>
          <th>Id</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Full Name</th>
          <th>Email</th>
          <th>Actions</th>
          <th>Options</th>
        </tr>
      </thead>
      <tbody align="center">
        <% rows.forEach(row => { %>
            <tr>
              <td><%= row.id %></td>
              <td><%= row.first_name %></td>
              <td><%= row.last_name %></td>
              <td><%= rows[0].getFullname() %></td>
              <td><%= row.email %></td>
              <td>
                <a href="/students/<%= row.id %>/addsubject">Add Subject</a>
              </td>
              <td>
                <a href="/students/edit/<%= row.id %>">Edit</a>
                <a href="/students/delete/<%= row.id %>" class="confirmation">Delete</a>
              </td>
            </tr>
        <% }) %>
      </tbody>
    </table>

    <script>
      var confirmation = document.querySelectorAll('.confirmation');
      for (let i = 0; i < confirmation.length; i++) {
        confirmation[i].addEventListener('click', e => {
          const state = confirm('delete this student?');
          if (!state) e.preventDefault();
        })
      }
    </script>
  </body>
</html>